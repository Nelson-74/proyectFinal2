
    <div class="container mt-4">
      <h1 class="mb-4">Ticket Details</h1>
      <div class="row">
          <div class="col">
              <h4>Purchaser: {{ user.email }}</h4>
              <br>
              <h4>Name: {{ user.firstName }}</h4>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col">
              <table class="table">
                <thead>
                  <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                  </tr>
                </thead>
                  <tbody>
                    {{#each cartStock}}
                      <tr>
                        <td>{{ this.idProduct.name }}</td>
                        <td>{{ this.qty }}</td>
                        <td>{{ this.totalPrice }}</td>
                      </tr>
                    {{/each}}
                  </tbody>
              </table>
            </div>
        </div>
        <div class="row">
            <div class="col">
              <h4>Total Cart Price: {{ totalPriceTicket }}</h4>
            </div>
        </div>
    </div>

