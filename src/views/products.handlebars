<div>
  <h2>Bienvenido, {{user.email}} !!!</h2>
  <p>User: {{user.firstName}}</p>
  <h2><strong>All Products</strong></h2>

{{#each products}}
  <div class="card">
  <div class="card-body">
    <h2>{{this.title}}</h2>
    <p>{{this.description}}</p>
    <p>Price: {{this.price}}</p>
    <p>{{this.thumbnail}}</p>
    <p>{{this.code}}</p>
    <p>{{this.stock}}</p>
    <p>{{this.category}}</p>
    <a href="/products/{{this._id}}"> Ver {{this._id}}</a>
    <button class="btn btn-primary" onclick="putIntoCart("{{this._id}}")">Add to cart {{this._id}}</button>
    <br />
    <a href="/products/{{this._id}}" class="btn btn-primary">View Details</a>
    <form action="/api/carts" method="POST">
      <input type="hidden" name="productId" value="{{this._id}}" />
      <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
  </div>
</div>
{{/each}}

