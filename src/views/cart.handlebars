<div class="cart_section">
  {{#if product}}
  <div class="container-fluid">
    <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="cart_container">
        <div class="cart_title"><small> Product of cart </small></div>
          <div class="cart_items">
            {{#each cartProducts}}
              <ul class="cart_list">
                <li class="cart_item clearfix">
                  <h3 class="cart_tittle"> {{this.productId.tittle}}</h3>
                  <div class="cart_item_image"><img src="" alt=""> {{this.productId.thumbnail}}</div>
                    <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                      <div class="cart_item_name cart_info_col">
                        <div class="cart_item_text">Description: {{this.productId.description}}</div>
                      </div>
                      <div class="cart_item cart_info_code">
                        <div class="cart_item_text">Code: {{this.productId.code}}</div>
                      </div>
                      <div class="cart_item cart_info_stock">
                        <div class="cart_item_text">Stock: {{this.productId.stock}}</div>
                      </div>
                      <div class="cart_item cart_info_category">
                        <div class="cart_item_text">Category: {{this.productId.category}}</div>
                      </div>
                      <div class="cart_item_quantity cart_info_col">
                        <div class="cart_item_title">Quantity:</div>
                        <div class="cart_item_text">{{this.productId.qty}}</div>
                      </div>
                      <div class="cart_item_price cart_info_col">
                        <div class="cart_item_title">Price: {{this.productId.price}} </div>
                      </div>
                  </div>
                </li>
              </ul>
              {{/each}}
          </div>
      </div>
    </div>
    </div>
  </div>
</div>
{{else}}
No products in the Cart!
{{/if}}