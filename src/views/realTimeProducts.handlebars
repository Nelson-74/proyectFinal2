<div>
<div class="card text-center" id="product-list" >
  <h2>List of Products</h2>
  <div class="container" >
    <div class="card-group" >
        {{#each products}}
        <div class="row">
          <main class="col-sm-auto row "></main>
            <aside class="col-sm-10 row-4">
              <div class="product">
            <h2>{{this.title}}</h2>
            <ul class="list-group">
            <hr>
            <img src="{{this.thumbnail}}" alt="">
            <p><strong>{{this.description}}</strong></p>
            <h3>Price: ${{this.price}}</h3>
            <h3>Stock: {{this.stock}}</h3>
            <p>Category: {{this.category}}</p>
            <p>Code: {{this.code}}</p>
            <p>Id: {{this.id}}</p>
            </ul>
            <button class="delete-btn" onclick="deleteProductSocket('${product.id}')">Delete</button>
            </aside>
    </div>
    {{/each}}
  </div>
  </div>
  </div>
</div>

<div>
  <h2 class="text-center">Add Product</h2>
  <div class="product-container " id="product_form">
    <div class="row ">
      <div class="col-sm-8 ">
        <form id="addProductForm" class="form-group col-auto">
          <div class="product">
          <div class="form-group">
            <label for="title">Title: </label>
            <input type="text" class="form-control " placeholder="Title" id="title_input">
          </div>
          <div class="form-group">
            <label for="description">Description: </label>
            <input type="text" class="description " placeholder="Description" id="description_input">
          </div>
          <div class="form-group">
            <label for="price">Price: $</label>
            <input type="text" class="price" placeholder="Price" id="price_input">
          </div>
          <div class="form-group">
            <label for="stock">Stock: </label>
            <input type="number" class="stock" placeholder="Stock" id="stock_input">
          </div>
          <div class="form-group">
            <label for="category">Category: </label>
            <input type="text" class="category" placeholder="Category" id="category_input">
          </div>
          <div class="form-group">
            <label for="code">Code: </label>
            <input type="text" class="code" placeholder="Code" id="code_input">
          </div>
          <div class="form-group">
            <label for="thumbnail">Thumbnail</label>
            <input type="text" class="thumbnail" placeholder="Thumbnail" id="thumbnail_input">
          </div>
          <div class="form-group">
            <button class="btn btn-success d-grid gap-2 col-2 mx-auto" type="submit">Add Product</button>
          </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
